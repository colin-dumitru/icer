# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /login                      controllers.Application.login
POST    /storeToken                 controllers.Application.storeToken
POST    /loginComplete              controllers.Application.loginComplete

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#Search

#History
POST    /history/push               controllers.history.History.push

#Playlist
POST /playlist/load controllers.playlist.Playlist.findAllForUser
POST /playlist/new/:name controllers.playlist.Playlist.createPlaylist(name: String)
POST /playlist/songs/:idPlaylist controllers.playlist.Playlist.getSongsForPlaylist(idPlaylist: String)
POST /playlist/song/delete/:idPlaylist/:idSong controllers.playlist.Playlist.deleteSongFromPlaylist(idPlaylist: String, idSong: String)
POST /playlist/delete/:idPlaylist controllers.playlist.Playlist.deletePlaylist(idPlaylist: String)

#Chart
POST    /chart/generate/:startDate/:endDate             controllers.chart.Chart.generateChart(startDate:String, endDate:String)